<div class="container">
<p id="notice"><%= notice %></p>

<div class="container">
<div class="col-md-6 col-md-offset-4 col-xs-8 col-xs-offset-2">
<h1>To Do List</h1>
</div>
</div>

<div class="container">
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td><%= link_to 'Show', todo_item %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>
<a href="/todo_items/new.html" class="btn btn-default" role="button">New Task</a>
<p></p>
</div>
</div>